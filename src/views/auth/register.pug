extends ../layout

block content
  h1.login-title Crear cuenta

  form.login(method='POST' action='/register' autocomplete='off')
    div
      input(type='text' name='name' placeholder='Nombre' required value='Victor')
    div
      input(type='email' name='email' placeholder='Correo electrónico' required value='victorze@email.com')
    div
      input(type='password' name='password' placeholder='Contraseña' required)
    div
      input(type='submit' value='Crear cuenta')
