extends ../layout

block content
  h2 Categorías

  h3.text-green.text-center Ingresos

  each category in inflowCategories
    form.update-form(method='POST' action=`/categories/${category._id}/update`  autocomplete='off')
      input(type='text' name='description' value=category.description required)
      input(type='submit' value='Guardar' class='btn-save')
      a(
        href="#"
        class='btn-delete'
        onclick=`if (confirm('Se eliminarán todas las transacciones vinculadas a esta categoría. ¿Está seguro que desea continuar?')) getElementById('${category._id}').click()`
      ) Eliminar
      a(href=`/categories/${category._id}/destroy` id=category._id)

  form.update-form.new-form(method='POST' action='/categories'  autocomplete='off')
    input(type='text' name='description' placeholder='Nueva categoría' required)
    input(type='hidden' name='type' value='inflow')
    input(type='submit' value='Guardar' class='btn-save')


  h3.text-red.text-center Gastos

  each category in outflowCategories
    form.update-form(method='POST' action=`/categories/${category._id}/update`  autocomplete='off')
      input(type='text' name='description' value=category.description required)
      input(type='submit' value='Guardar' class='btn-save')
      a(
        href="#"
        class='btn-delete'
        onclick=`if (confirm('Se eliminarán todas las transacciones vinculadas a esta categoría. ¿Está seguro que desea continuar?')) getElementById('${category._id}').click()`
      ) Eliminar
      a(href=`/categories/${category._id}/destroy` id=category._id)

  form.update-form.new-form(method='POST' action='/categories'  autocomplete='off')
    input(type='text' name='description' placeholder='Nueva categoría' required)
    input(type='hidden' name='type' value='outflow')
    input(type='submit' value='Guardar' class='btn-save')
